<resources>


    <style name="DrawerArrowStyle_white" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle_black" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>


    <style name="toolBarRight_white" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="toolBarRight_black" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/realBlack</item>
    </style>


    <!-- Prometheus theme  <item name="colorControlNormal">@color/white</item>-->
    <style name="PromCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="PromTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/prom_colorPrimary</item>
        <item name="colorPrimaryDark">@color/prom_colorPrimaryDark</item>
        <item name="colorAccent">@color/prom_colorAccent</item>

        <item name="android:colorBackground">@color/prom_colorBackground</item>
        <item name="android:windowBackground">@color/prom_colorBackground</item>

        <item name="android:textColor">@color/primary_text_material_light</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/prom_colorPrimaryDark</item>

        <item name="android:colorButtonNormal">@color/prom_colorPrimary</item>

        <item name="android:searchIcon">@android:drawable/ic_menu_info_details</item>


        <item name="cardStyle">@style/PromCardView</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle_white</item>
        <item name="actionOverflowButtonStyle">@style/toolBarRight_white</item>
    </style>


    <!-- Material Theme-->
    <style name="MaterialCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="MaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/material_colorPrimary</item>
        <item name="colorPrimaryDark">@color/material_colorPrimaryDark</item>
        <item name="colorAccent">@color/material_colorAccent</item>

        <item name="android:windowBackground">@color/material_colorBackground</item>
        <item name="android:colorBackground">@color/material_colorBackground</item>


        <item name="android:textColor">@color/primary_text_material_light</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/material_colorPrimaryDark</item>

        <item name="android:colorButtonNormal">@color/material_colorPrimary</item>

        <item name="cardStyle">@style/MaterialCardView</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle_white</item>
        <item name="actionOverflowButtonStyle">@style/toolBarRight_white</item>
    </style>


    <!--Pig Theme <item name="android:statusBarColor">@color/pig_colorPrimaryDark</item>-->
    <style name="PigCardView" parent="CardView">
