<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:gravity="center"
    android:background="@color/white"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
    <LinearLayout
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:id="@+id/linearLayout7"
        android:weightSum="1">


        <ImageView
            android:layout_width="40dp"
            android:layout_gravity="start"
            android:layout_height="40dp"
            android:src="@drawable/overdraw_permission"
            android:id="@+id/dialog_theme_issues_image" />

        <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:textColor="#757575"
        android:text="Issues theme"
        android:layout_marginLeft="25dp"

        android:id="@+id/textViewThemeIssues"
            android:layout_weight="0.36" />

    </LinearLayout>

            <LinearLayout
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@color/white"
        android:gravity="right"
        android:paddingTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout7"
        android:layout_alignRight="@+id/linearLayout7"
        android:layout_alignEnd="@+id/linearLayout7"
        android:layout_alignLeft="@+id/linearLayout7"
        android:layout_alignStart="@+id/linearLayout7">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/prom_colorPrimary"
        android:id="@+id/issues_theme_cancel"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:text="@string/cancel_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/issues_theme_confirm"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/prom_colorPrimary"
        android:text="@string/confirm_button"/>
    </LinearLayout>
        </RelativeLayout>


</RelativeLayout>
