        <item name="android:textColorSecondary">@color/material_colorPrimaryDark</item>

        <item name="colorButtonNormal">@color/material_colorPrimary</item>

        <item name="cardStyle">@style/MaterialCardView</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle_white</item>
        <item name="actionOverflowButtonStyle">@style/toolBarRight_white</item>

    </style>

    <!-- Dog Theme-->

    <style name="DogCardView" parent="CardView">
